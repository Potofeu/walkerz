 <% favorite = hike.user_favorite(current_user) %>
  <% if favorite %>
    <%= button_to favorite_path(favorite), data: { action: "click->favorites#delete" }, form: { data: { favorites_target: "link" } }, class: "favorite-icon" do %>
      <i class="fa-solid fa-bookmark" id="orange"></i>
    <% end %>
  <% else %>
    <%= button_to hike_favorites_path(hike), data: { action: "click->favorites#send" },
     form: { data: { favorites_target: "link" } }, class: "favorite-icon" do %>
      <i class="fa-solid fa-bookmark" id="grey"></i>
    <% end %>
  <% end %>
