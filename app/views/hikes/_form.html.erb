  <%= f.input :description, label: false, placeholder: "Description" %>
  <%= f.input :city, label: false, placeholder: "Ville" %>
  <%= f.input :distance, label: false, placeholder: "Distance" %>
  <%= f.input :time, label: false, placeholder: "Temps estimÃ©" %>
  <%= f.association :categories,
                    as: :check_boxes,
