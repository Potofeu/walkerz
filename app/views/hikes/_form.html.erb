<%= simple_form_for hike do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :city %>
  <%= f.association :categories,
                    as: :check_boxes,
                    input_html: { class: "tag-selector" },
                    item_wrapper_class: 'tag-item' %>
  <%= f.button :submit %>
<% end %>
