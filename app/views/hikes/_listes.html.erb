
  <div class="py-2"data-search-hikes-target="list">
    <h1>Liste des circuits</h1>
    <div class="row">
      <div class="col-12">
        <div class="hikes-cards">
          <% @hikes.each do |hike| %>
            <div class="py-2" data-controller="favorites">
              <div class="hike-card">
                <div data-favorites-target="buttons">
                  <%= render 'favorites/icon', hike: hike, favorite: @favorite %>
                </div>
                <%= link_to hike_path(hike) do %>
                  <div class="hike-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path hike.locations.first.photo.key %>')">
                  </div>
                  <div class="hike-description pt-1">
                    <div class="hike-info">
                      <strong><%= hike.name.titleize %></strong>
                      <br>Description: <%= hike.description.truncate(28) %>
                      <br><i class="fa-solid fa-shoe-prints"></i> Dur√©e: <%= hike.time.to_i %>h
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
