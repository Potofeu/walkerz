
  <div class="py-2"data-search-hikes-target="list">
    <h1>Liste des circuits</h1>
    <div class="row">
      <div class="col-12">
        <div class="hikes-cards" data-controller="favorites">
          <% @hikes.each do |hike| %>
            <div class="py-2">
              <div class="hike-card">
                <% @user.favorites.each do |favorite| %>
                  <% if favorite.hike == hike %>
                    <%= link_to favorite_path(favorite), data: { turbo_method: :delete, turbo_confirm: "Etes-vous sûr de supprimer ce circuit?"}, class: "favorite-icon" do %>
                      <i class="fa-solid fa-bookmark" id="orange"></i>
                    <% end %>
                  <% else %>
                    <%= link_to hike_favorites_path(hike), data: { turbo_method: :post }, class: "favorite-icon" do %>
                      <i class="fa-solid fa-bookmark" id="grey"></i>
                    <% end %>
                  <% end %>
                <% end %>
                <%= link_to hike_path(hike) do %>
                  <div class="hike-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path hike.locations.first.photo.key %>')">
                  </div>
                  <div class="hike-description pt-1">
                    <div class="hike-info">
                      <strong><%= hike.name.capitalize %></strong>
                      <br>Description: <%= hike.description.truncate(28) %>
                      <br><i class="fa-solid fa-shoe-prints"></i> Durée: <%= hike.time %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
