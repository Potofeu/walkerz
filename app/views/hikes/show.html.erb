<div class="container pale-background py-3">
  <div class="row-fluid">
    <h1><%= @hike.name %></h1>
    <div class="hike-card">
      <%= cl_image_tag @hike.locations.first.photo.key, class: "hike-image-show" %>
    </div>
    <div class="row-fluid">
      <div class="list-group flex-row gap-2">
        <div class="list-group-hike d-flex justify-content-center gap-1 py-1">
          <div class="d-flex gap-2 w-100 justify-content-between">
            <div>
              <h6>Distance</h6>
              <p><%= @hike.distance %></p>
            </div>
          </div>
        </div>
        <div class="list-group-hike d-flex justify-content-center gap-1 py-1">
          <div class="d-flex gap-2 w-100 justify-content-between">
            <div>
              <h6>Temps</h6>
              <p><%= @hike.time %></p>
            </div>
          </div>
        </div>
      </div>
      <div>
        <p><%= @hike.description %></p>
      </div>
      <div style="width: 100%; height: 600px;"
		  data-controller="map"
		  data-map-markers-value="<%= @markers.to_json %>"
		  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        <h2>Circuits</h2>
        <%= @markers %>
      </div>
    </div>
  </div>
</div>
