<div class="top-page">
  <h2><span data-controller="typed-js"></span></h2>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
      <h1 class="mt-3 text-center">Mes Circuits: </h1>
      <div class="d-flex justify-content-center">
        <%= link_to new_hike_path, class: "btn btn-orange text-center" do %>
          <i class="fa-solid fa-circle-plus"></i>
          En créer un nouveau
        <% end %>
      </div>
        <% @myhikes.each do |myhike| %>
          <div class="card-show-myhikes my-2" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)), url(<%= cl_image_path myhike.locations.first.photo.key %>)">
            <div class="image-container">
              <div class="card-myhike-content">
                <%= link_to hike_path(myhike) do %>
                  <h1><%= myhike.name.truncate(30) %></h1>
                <% end %>
                <div class="d-flex justify-content-evenly my-1">
                  <div class="col-6">
                    <p>Temps: <%= myhike.time%> h</p>
                  </div>
                  <div class="col-6">
                    <p>Distance: <%= myhike.distance %> km</p>
                  </div>
                </div>
              </div>
              <div class="d-flex justify-content-evenly">
                <div class="col-6 text-center">
                  <%= link_to edit_hike_path(myhike), class: "btn btn-blue" do %>
                    Modifier <i class="fa-solid fa-pen-to-square"></i>
                  <% end %>
                </div>
                <div class="col-6 text-center">
                  <%= link_to hike_path(myhike), data: { turbo_method: :delete, turbo_confirm: "Etes-vous sûr de supprimer ce circuit?"}, class: "btn btn-orange" do %>
                    Supprimer <i class="fa-solid fa-delete-left"></i>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
