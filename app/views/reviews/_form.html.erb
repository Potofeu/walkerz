<%= simple_form_for([hike, review], data: { insert_in_list_target: "form", action: "submit->insert-in-list#send" }) do |f| %>
  <%= f.input :content, label: "Commentaire", as: :text %>
  <%= f.input :rating, as: :select, collection: (1..5).to_a, required: true, label: "Donnez une note", input_html: { data: { controller: "star-rating" } } %>
  <%= f.submit "Ajouter", class:"btn btn-orange" %>
<% end %>
